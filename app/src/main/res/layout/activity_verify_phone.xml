<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.sabuj.freelancer.VerifyPhone">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Enter the code that was sent to you"
        android:textColor="@color/textColor"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/verify_phone_tv_mobile_no"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="11">

        <EditText
            android:id="@+id/verify_phone_et_code1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/textColor"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/verify_phone_et_code2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/textColor"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/verify_phone_et_code3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/textColor"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/verify_phone_et_code4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/textColor"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/verify_phone_et_code5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/textColor"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/verify_phone_btn_continue"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:background="@drawable/backgroundofbutton"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="16dp" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:text="Didn't get the code?"
        android:textColor="@color/textColor"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <Button
            android:id="@+id/verify_phone_btn_resend"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@drawable/backgroundofbutton"
            android:text="Resend code"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14dp" />


    </LinearLayout>

</LinearLayout>
